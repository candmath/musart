<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base do aplicativo (claro) -->

    <style name="Theme.MUSART" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Cor primária -->

        <item name="colorPrimary">@color/burgundy</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Cor secundária -->

        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Cor da barra de status -->

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

    </style>

    <!-- Tema sem a barra de ações do aplicativo -->

    <style name="Theme.MUSART.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Tema com sobreposição da barra do aplicativo -->

    <style name="Theme.MUSART.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Tema com sobreposição das páginas de popup -->

    <style name="Theme.MUSART.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>